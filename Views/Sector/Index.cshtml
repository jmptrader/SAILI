@using PagedList.Mvc;
@using PagedList;

<link href="@Url.Content("~/Content/PagedList.css")" rel="stylesheet" type="text/css" />

@model PagedList.IPagedList<SAILI.Models.Sector>

<h3 id="name">Select from @Model.Count() / 11 Market Sectors: </h3>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Image")
        </th>
        <th>
            @Html.DisplayName("Sector")
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@item.ImageUrl" alt="An Image" width="100" height="100" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SectorName)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.SectorID })
        </td>
    </tr>
}
</table>
<div id="AlignPager">
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("Index",
        new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
</div>
<p class="clear"/>
<p class="clear"/>



